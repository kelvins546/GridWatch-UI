{
  "expo": {
    "name": "GridWatch",
    "slug": "GridWatch",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/gridwatch_icon2.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/gridwatch_icon2.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#00A651"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.gridwatch.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "gradleChildHeapSize": "4g"
          }
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-secure-store",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "BudgetWidget",
              "label": "GridWatch Budget",
              "minWidth": "260dp",
              "minHeight": "110dp",
              "description": "Monitor your electricity budget",
              "previewImage": "./assets/widget-preview.png",
              "resizeMode": "horizontal|vertical"
            }
          ]
        }
      ],
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "b47693f5-a608-4eb6-bf85-58ffa2a0ef67"
      }
    }
  }
}
